{
	"name": "cloudflare-myip",
	"type": "module",
	"scripts": {
		"build:assets": "tsx scripts/generate-assets.ts",
		"dev": "npm run build:assets && wrangler dev",
		"dev:worker": "npm run build:assets && wrangler dev --ip 0.0.0.0",
		"dev:vercel": "npm run build:assets && vercel dev",
		"start": "tsx src/node.ts",
		"start:node": "tsx src/node.ts",
		"build": "npm run build:assets && tsc",
		"deploy": "npm run build:assets && wrangler deploy --minify",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.7",
		"hono": "^4.11.2",
		"mmdb-lib": "^3.0.1"
	},
	"devDependencies": {
		"@types/node": "^25.0.3",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"wrangler": "^4.54.0"
	}
}
